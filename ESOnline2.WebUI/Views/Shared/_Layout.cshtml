<!DOCTYPE html>
<html lang="en" ng-app="mdlESOnlineApp">
    <head>
        <base href="~/" />
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css") 
                        
    </head>
    <body ng-controller="ctlMenu" >
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a class="" href="/">
                        <img class="img-responsive" src="~/Images/ESLogo.jpg" />
                    </a>                    
                </div>
                <div class="float-right">                    
                    <nav>
                        <ul id="menu">                                                                               
                            <li><a href="/Cliente/List">Clientes</a></li>                                                        
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">              
                    @RenderBody()                
            </section>
        </div>            
        <footer>
            <div class="content-wrapper">
                <div>
                    <p>&copy; @DateTime.Now.Year - ESOnline</p>
                </div>
            </div>           
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/libs")
        @Scripts.Render("~/bundles/custom")  
    </body>
</html>
