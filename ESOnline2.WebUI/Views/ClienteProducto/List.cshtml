<div ng-controller="ctlClienteProducto as productoVendidoCtrl">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Vigentes</h3>
                </div>
                <div class="panel-body">
                    <div class="row-border-bottom" ng-repeat="itemProductoVigente in cliente.ProductosVigentes | orderBy:'Nombre'">

                            <div class="row">
                                <h5 class="list-group-item-heading col-sm-3">{{itemProductoVigente.Producto.Nombre}}</h5>
                                <div class="list-group-item-text col-sm-4">
                                    <div class="list-group-item-text text-success">Vence: {{itemProductoVigente.FechaVencimiento | date:'dd/MM/yyyy'}}</div>
                                    <div class="list-group-item-text text-warning">Aviso: {{itemProductoVigente.FechaAviso | date:'dd/MM/yyyy'}}</div>
                                    <div class="list-group-item-text text-success">Serie: {{itemProductoVigente.NumeroSerie}}</div>
                                </div>                                
                                <div class="list-group-item-text col-sm-5">
                                        <button class="btn btn-sm btn-success" type="button" ng-disabled="editMode" ng-click="recargarProductoVendido(cliente,itemProductoVigente,false)">
                                            <span class="glyphicon glyphicon-refresh" ng-disabled="editMode"></span>
                                        </button>
                                        <button class="btn btn-sm btn-default" type="button" ng-disabled="editMode" ng-click="editProductoVendido(cliente,itemProductoVigente)">
                                            <span class="glyphicon glyphicon-pencil" ng-disabled="editMode"></span>
                                        </button>
                                        <button class="btn btn-sm btn-warning" type="button" ng-disabled="editMode" ng-click="alertProductoVendido(cliente,itemProductoVigente)">
                                            <span class="glyphicon glyphicon-warning-sign" ng-disabled="editMode"></span>
                                        </button>
                                        <button class="btn btn-sm btn-default" type="button" ng-disabled="editMode" ng-click="removeProductoVendido(cliente,itemProductoVigente)">
                                            <span class="glyphicon glyphicon-remove" ng-disabled="editMode"></span>
                                        </button>
                                </div>                     
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Vencidos</h3>
                </div>
                <div class="panel-body">
                    <div  ng-repeat="itemProductoVencido in cliente.ProductosVencidos | orderBy:'Nombre' ">
                        <div ng-class="{'row-border-bottom-warning':itemProductoVencido.FechaAviso, 'row-border-bottom':!itemProductoVencido.FechaAviso}">
                            <div class="row">
                                <h5 class="list-group-item-heading col-sm-3">{{itemProductoVencido.Producto.Nombre}}</h5>
                                <div class="list-group-item-text col-sm-4">
                                    <div class="list-group-item-text text-danger">Vence: {{itemProductoVencido.FechaVencimiento | date:'dd/MM/yyyy'}}</div>
                                    <div class="list-group-item-text text-warning">Aviso: {{itemProductoVencido.FechaAviso | date:'dd/MM/yyyy'}}</div>
                                    <div class="list-group-item-text text-danger">Serie: {{itemProductoVencido.NumeroSerie}}</div>
                                </div>
                                <div class="list-group-item-text col-sm-5">
                                    <button class="btn btn-sm btn-success" type="button" ng-disabled="editMode" ng-click="recargarProductoVendido(cliente,itemProductoVencido,true)">
                                        <span class="glyphicon glyphicon-refresh" ng-disabled="editMode"></span>
                                    </button>
                                    <button class="btn btn-sm btn-default" type="button" ng-disabled="editMode" ng-click="editProductoVendido(cliente,itemProductoVencido)">
                                        <span class="glyphicon glyphicon-pencil" ng-disabled="editMode"></span>
                                    </button>
                                    <button class="btn btn-sm btn-warning" type="button" ng-disabled="editMode" ng-click="alertProductoVendido(cliente,itemProductoVencido)">
                                        <span class="glyphicon glyphicon-warning-sign" ng-disabled="editMode"></span>
                                    </button>
                                    <button class="btn btn-sm btn-default" type="button" ng-disabled="editMode" ng-click="removeProductoVendido(cliente,itemProductoVencido)">
                                        <span class="glyphicon glyphicon-remove" ng-disabled="editMode"></span>
                                    </button>                                   
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr noshade size=3>
    <div class="form-horizontal">
        <div><h4>{{lblVenta}}</h4></div>
        <div class="list-group-item-text">
            Producto: <select class="form-control" ng-show="!editMode"  ng-disabled="editMode" ng-model="nuevoProductoVendido.Producto" ng-options="tipoProducto as tipoProducto.Nombre for tipoProducto in productos"></select>
            <input class="form-control" ng-show="editMode" type="text" ng-disabled="!editmode"  ng-model="nuevoProductoVendido.Producto.Nombre" />
            Número de serie:  <input type="text" class="form-control" ng-model="nuevoProductoVendido.NumeroSerie" />
            @*Fabricación: <select ng-model="nuevoProductoVendido.Fabricacion" class="form-control" ng-options="anio for anio in anios"></select>*@
            <span ng-show="editMode">Fecha de aviso:  </span><input type="date" ng-show="editMode" class="form-control" ng-model="nuevoProductoVendido.FechaAviso" />        
            <button class="form-control btn btn-success" ng-disabled="nuevoProductoVendido.NumeroSerie=='' || nuevoProductoVendido.NumeroSerie==undefined || nuevoProductoVendido.NumeroSerie==undefined" type="button" ng-click="addProductoVendido(cliente,nuevoProductoVendido)">
                <span class={{clsConfirmar}} ng-disabled="editMode"></span>
            </button>
        </div>
    </div>
</div>