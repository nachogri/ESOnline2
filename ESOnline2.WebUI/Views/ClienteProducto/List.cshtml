<div ng-controller="ctlProducto as productoCtrl">
    <div class="row">
        <div class="col-sm-3">
            <p>Productos:</p>
            <div ng-repeat="itemProducto in productos | orderBy:'Nombre' | paginate:10">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-lg-9">
                            <h4 class="list-group-item-heading">{{itemProducto.Nombre}}</h4>
                            <div class="list-group-item-text">Duracion {{itemProducto.Vencimiento}} meses</div>
                        </div>
                        <button class="col-lg-push-1 btn btn-success" type="button" ng-click="addProducto(cliente)">+</button>
                    </div>
                </div>
            </div>
            <pagination-controlsm></pagination-controlsm>                               
        </div>
        <div class="col-sm-1">
        </div>
        <div class="col-sm-8">
            <p>Productos Vendidos:</p>
            <p></p>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Vigentes</h3>
                </div>
                <div class="panel-body">
                    <div ng-repeat="itemProducto in productosVendidos | orderBy:'Nombre' | paginate:10">
                        <div class="list-group-item">
                            <div class="row">
                                <h4 class="list-group-item-heading col-sm-6">{{itemProducto.Nombre}}</h4>
                                <div class="list-group-item-text col-sm-5 text-success">Vence: 01/01/01</div>
                                <button class="col-sm-push-1 btn btn-sm" type="button" ng-click="removeDireccion(cliente,$index)">x</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Vencidos</h3>
                </div>
                <div class="panel-body">
                    <div ng-repeat="itemProducto in productosVendidos | orderBy:'Nombre' | paginate:10">
                        <div class="list-group-item">
                            <div class="row">
                                <h4 class="list-group-item-heading col-sm-6">{{itemProducto.Nombre}}</h4>
                                <div class="list-group-item-text col-sm-5 text-danger">Vencio: 12/12/12</div>
                                <button class="col-sm-push-1 btn btn-sm" type="button" ng-click="removeDireccion(cliente,$index)">x</button>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>